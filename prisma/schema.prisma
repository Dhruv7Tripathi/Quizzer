generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String  @id @default(cuid())
  email   String
  name    String?
  quizzes Quiz[]
}

model Quiz {
  id        String     @id @default(cuid())
  title     String
  questions Question[]
  user      User       @relation(fields: [userId], references: [id])
  userId    String
}

model Question {
  id     String  @id @default(cuid())
  text   String
  isTrue Boolean
  quiz   Quiz    @relation(fields: [quizId], references: [id])
  quizId String
}
